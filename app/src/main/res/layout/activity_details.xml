<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_country_name"
    tools:context=".fragment.CountryNameFragment">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="230dp">
                <com.smarteist.autoimageslider.SliderView
                    android:id="@+id/autoImageSlider"
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/line_color"
                    app:sliderAnimationDuration="200"
                    app:sliderAutoCycleDirection="back_and_forth"
                    app:sliderIndicatorAnimationDuration="600"
                    app:sliderIndicatorEnabled="true"
                    app:sliderIndicatorOrientation="horizontal"
                    app:sliderIndicatorPadding="5dp"
                    app:sliderIndicatorRadius="3dp"
                    app:sliderScrollTimeInSec="3" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|center_horizontal">
                </LinearLayout>
            </FrameLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <TextView
                    android:id="@+id/tv_countr_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:singleLine="true"
                    android:text="Uzbekistan"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_countr_name_org"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:text="Republic of Uzbekistan"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tv_capital_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:text="Capital : Tashkent"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_lline"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#07A92B"
                android:orientation="horizontal" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:text="Test yourself in an interesting test"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <com.jackandphantom.carouselrecyclerview.CarouselRecyclerview
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:id="@+id/recycler"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/exchange"/>
                    <TextView
                        android:id="@+id/tv_sum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Symbol : so'm"
                        android:textColor="#767373"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_symbol_sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="#767373"
                    android:text="Uzbekistan so'm"
                    android:singleLine="true"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_background"
                android:layout_width="match_parent"
                android:layout_margin="15dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/restange_layout">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/internet"/>
                    <TextView
                        android:id="@+id/tv_language"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Uzbek,Russian"
                        android:textColor="#767373"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_borders"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Borders : AFG,KAZ,KGZ,TJK,TKM"
                    android:layout_marginTop="5dp"
                    android:textColor="#767373"
                    android:singleLine="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/area"/>
                    <TextView
                        android:id="@+id/tv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Area : 447400.0 км²"
                        android:textColor="#767373"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/people"/>
                    <TextView
                        android:id="@+id/tv_people"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Population : 34232050"
                        android:textColor="#767373"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/car"/>
                    <TextView
                        android:id="@+id/tv_car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Car : signs - UZ,side - right"
                        android:textColor="#767373"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:id="@+id/iv_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/continents"/>
                    <TextView
                        android:id="@+id/tv_continents"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Asia"
                        android:textColor="#767373"
                        android:layout_marginLeft="15dp"
                        android:singleLine="true"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/tv_coast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CoatOfArms :"
                        android:textColor="#767373"
                        android:singleLine="true"/>
                    <ImageView
                        android:id="@+id/iv_arms"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/uzb"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:id="@+id/tv_flag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Flag :"
                        android:textColor="#767373"
                        android:singleLine="true"/>
                    <ImageView
                        android:id="@+id/iv_flag"
                        android:layout_width="24dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/uzbekistan"
                        android:layout_marginLeft="15dp"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_flag_desc"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    android:text="@string/str_flag_desc"
                    android:textColor="#767373"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>